{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": ".",   
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src", "tests", "prisma/client.ts"],
  "exclude": ["node_modules", "dist"]
}
