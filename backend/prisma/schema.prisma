generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id     Int     @id @default(autoincrement())
  nome   String
  email  String  @unique
  senha  String
  tarefas Tarefa[]
}

model Tarefa {
  id         Int      @id @default(autoincrement())
  titulo     String
  descricao  String
  status     String   @default("pendente")
  usuario    Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId  Int
}
